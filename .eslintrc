{
  "env": {
    "node": true
  },
  "extends": "standard",
  "rules": {
    "indent": [
      "error",
      4
    ],
    "linebreak-style": [
      2,
      "unix"
    ],
    "quotes": [
      2,
      "single",
      {
        "avoidEscape": true,
        "allowTemplateLiterals": true
      }
    ],
    "semi": [
      2,
      "always"
    ],
    "space-before-function-paren": [
      2,
      {"anonymous": "always", "named": "never"}
    ],
    "spaced-comment": [
      0
    ],
    "wrap-iife": [
      2,
      "inside"
    ]
  }
}